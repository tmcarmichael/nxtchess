# Server
PORT=8080
ENV=development  # "development" or "production"

# Logging
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARN, ERROR (defaults: DEBUG for dev, INFO for prod)
LOG_JSON=false   # true for JSON output (auto-enabled in production)

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/chess_db?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINS=5

# Redis
REDIS_ADDR=redis:6379
REDIS_PASSWORD=  # Empty for local dev, set in production

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8080

# OAuth (all optional - providers without credentials are skipped)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
