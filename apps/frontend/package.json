{
  "name": "nxtchess",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "Thomas Carmichael",
    "email": "ThomasCarmichael@pm.me",
    "url": "https://tmcarmichael.com/"
  },
  "contributors": [
    {
      "name": "Kevin Nguyen",
      "email": "kev.ftw595@gmail.com",
      "url": "https://github.com/kwin555"
    }
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "vite",
    "ci": "yarn cache clean && yarn install",
    "clear-cache": "yarn clear cache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prebuild": "yarn format:check && yarn lint",
    "preview": "vite preview",
    "type:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "cd ../.. && husky .husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@solidjs/router": "^0.15.3",
    "apexcharts": "^4.4.0",
    "chess.js": "^1.0.0",
    "solid-apexcharts": "^0.4.0",
    "solid-js": "^1.9.3",
    "stockfish": "github:nmrugg/stockfish.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@solidjs/testing-library": "^0.8.10",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-solid": "^0.14.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-solid": "^2.11.0",
    "vite-plugin-static-copy": "^3.1.5",
    "vitest": "^4.0.17",
    "workbox-build": "^7.4.0",
    "workbox-window": "^7.4.0"
  },
  "packageManager": "yarn@1.22.22"
}
